<div id="modal-delete" class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete trick</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="modal-delete-form" method="POST">
                <div class="modal-body">
                    <p>Are you sure to delete the trick "<span id="js-delete-trick-name"></span>"?</p>
                </div>
                <input type="hidden" name="_token" value="{{ csrf_token('delete-trick') }}"/>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>