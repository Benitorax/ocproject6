{% apply inky_to_html|inline_css(source('@styles/email.css')) %}
<container>
    <row>
        <columns small="12" large="12">
            <div class="banner">
                <h1 class="center">SnowTricks</h1>
            </div>

            <h2>Welcome {{ email.toName }}!</h2>

            <p>You signed up as {{ email.toName }} with the following email:</p>
            <p><code class="quote">{{ email.to[0].address }}</code></p>
            <p> 
                <a class="link" href="{{ url('app_user_activate', {'token': token.token}) }}">Click here</a> to activate your account
                (this link is valid until {{ token.expiredAt|date('F jS \\a\\t H:i') }}).
            </p>

            <p>Cordially,</p>
            <p>SnowTricks Company</p>
        </columns>
    </row>
</container>
{% endapply %}