{% extends 'base.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-9 col-lg-6">
                <h1 class="text-center mb-5 d-none d-md-block">Registration</h1>
                <div class="card mx-auto text-center">
                    <div class="card-body">
                        <h1 class="card-title my-3 d-block d-md-none">Registration</h1>
                        {{ form_start(form, {'attr': {'class': 'row my-5 my-md-3'}}) }}
                            <div class="col-12 col-md-9 mx-auto text-center">
                                <div class="mb-3">
                                    <label class="form-label" for="username">Username</label>
                                    {% for error in form.username.vars.errors %}
                                        <div class="invalid-feedback mt-0 mb-1">{{ error.message }}</div>
                                    {% endfor %}
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'id': 'username', 'style': 'text-align: center;'}}) }}
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="email">Email</label>
                                    {% for error in form.email.vars.errors %}
                                        <div class="invalid-feedback mt-0 mb-1">{{ error.message }}</div>
                                    {% endfor %}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'email', 'style': 'text-align: center;'}}) }}
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="password">Password</label>
                                    {% for error in form.password.vars.errors %}
                                        <div class="invalid-feedback mt-0 mb-1">{{ error.message }}</div>
                                    {% endfor %}
                                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'password', 'style': 'text-align: center;'}}) }}    
                                </div>
                            </div>
                            <div class="col-12 mt-5">
                                <button type="submit" class="btn btn-primary">Create an account</button>
                            </div>
                        {{ form_end(form) }}
                        <div class="mb-2"><a href="#">Already an account?</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
