{% block collection_entry_widget %}
    <div id="{{ form.vars.id }}" class="row mt-2">
        {# <label for="{{ form.vars.id }}__file" class="required">File</label> #}
        {% if form.parent.vars.name is same as('images') %}
            <input class="form-control" type="file" id="{{ form.vars.id }}_file" name="{{ form.vars.full_name }}[file]" required="required"/>
        {% elseif form.parent.vars.name is same as('videos') %}
            <textarea class="form-control" id="{{ form.vars.id }}_file" name="{{ form.vars.full_name }}[tagOrUrl]" placeholder="Copy the video's url or the embed code" required="required"></textarea>
        {% endif %}
    </div>
    <div class="row justify-content-center my-2">
        <div class="col-auto js-image d-none mt-2" style="width: 12rem;">
            <img class="img-fluid rounded" src="">
        </div>
        <div class="col-auto ml-auto mt-2 js-button"></div>
    </div>
{% endblock %}

{% block collection_entry_label %}
    <label class="form-label">{{ form.parent.vars.label }}</label>
{% endblock %}

