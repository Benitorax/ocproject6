{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
    <main class="container">
        <div class="row justify-content-center my-2">
            <div class="col-12 col-md-9">
                <div class="position-relative">
                    <img style="max-height: 500px; width: 100%" src="{{ trick.illustration|imageToDataUrl }}">
                    <h1 class="position-absolute top-50 start-50 translate-middle text-white text-center bg-dark px-5 py-2 rounded h1">{{ trick.name }}</h1>
                </div>
                <div class="row my-3">
                    {% for image in trick.images %}
                        <div class="col mb-3">
                            <div class="mx-auto" style="width: 18rem;">
                                <img src="https://cdn.pixabay.com/photo/2018/02/23/17/56/snowboarding-3176182_1280.jpg" class="card-img-top" alt="...">
                            </div>
                        </div>
                    {% endfor %}
                    {% from 'video/embed_video.html.twig' import embed_video %}
                    {% for video in trick.videos %}
                        <div class="col mb-3">
                            <div class="mx-auto" style="width: 18rem;">
                                {{ embed_video(video.source, video.url) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="row my-2">
                    <div class="col">{{ trick.description|nl2br }}
                    </div>
                </div>
                <div class="d-flex flex-wrap justify-content-around my-5">
                    <div class="mb-2 badge bg-secondary rounded-pill" style="font-size: 0.8rem">Published the {{ trick.createdAt|date('j F Y') }}</div>
                    {% if trick.createdAt is same as (trick.updatedAt) %}
                        <div class="mb-2 badge bg-secondary rounded-pill" style="font-size: 0.8rem">Updated the {{ trick.updatedAt|date('j F Y') }}</div>
                    {% endif %}
                    <div class="mb-2 badge bg-success rounded-pill" style="font-size: 0.8rem">{{ trick.categoryName }}</div>
                </div>
                <hr>
                <form class="row" method="POST">
                    <div class="d-flex flex-column flex-md-row justify-content-between">
                        <div class="flex-grow-1">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                        <div class="align-self-center m-3">
                            <button type="submit" class="btn btn-primary">Leave a comment</button>
                        </div>
                    </div>
                </form>
                <hr>
                <div>
                    {% for index in range(1,3) %}
                        <div class="col mb-3">
                            <div class="border border-secondary mx-auto d-md-flex flex-column flex-md-row" style="width: 100%;">
                                <div class="bg-light px-2">
                                    <div class="p-2">Username Long</div>
                                    <div class="d-none d-md-block pt-2 px-4">
                                        <img class="rounded-circle" style="width: 90px;" src="https://cdn.pixabay.com/photo/2017/11/06/09/53/tiger-2923186_1280.jpg">
                                    </div>
                                </div>
                                <div class="px-2">
                                    <div class="p-2">
                                        <small class="text-muted">Last updated 3 mins ago</small>
                                    </div>
                                    <p class="p-2">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.<br>This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}