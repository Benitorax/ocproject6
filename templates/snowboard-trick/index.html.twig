{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
    <main>
        <div class="position-relative">
            <img id="image-banner" class="img-fluid w-100" alt="..." src="{{ asset('images/banner-image.jpg') }}">
            <p class="position-absolute top-50 start-50 translate-middle text-white text-center bg-dark px-5 py-2 rounded h1">
                SHARE AND LEARN<br>
                NEW TRICKS!
            </p>
            <div id="scroll-down-to-tricks" class="sticky-bottom">
                <a href="#tricks" class="position-absolute bottom-0 end-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-short text-white icon-navigation" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v5.793l2.146-2.147a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L7.5 10.293V4.5A.5.5 0 0 1 8 4z"/>
                    </svg>
                </a>
            </div>
        </div>
        <div class="container py-3 d-flex justify-content-center">
            <a href="{{ path('app_snowboard_trick_create') }}">
                <button class="btn btn-success">Add a new trick</button>
            </a>
        </div>
        <div id="tricks" class="container-fluid pb-5">
            <div id="tricks-content" class="row justify-content-center position-relative">
                {% for trick in tricks %}
                        <div class="col-auto mb-3">
                            <div class="card mx-auto" style="width: 18rem;">
                                <a href="{{ path('app_snowboard_trick_show', {'slug': trick.slug}) }}">
                                    <img src="{{ trick.illustration|imageToDataUrl }}" style="height: 11.9rem;" class="card-img-top" alt="illustration">
                                </a>
                                <div class="card-body">
                                    <div class="d-flex justify-content-end">
                                        <div class="w-100">
                                            <a class="link-secondary" href="{{ path('app_snowboard_trick_show', {'slug': trick.slug}) }}">{{ trick.name }}</a>
                                        </div>
                                        {% if app.user is not null %}
                                            <div class="px-2">
                                                <a href="{{ path('app_snowboard_trick_edit', {'slug': trick.slug}) }}">
                                                    <svg class="text-secondary" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                                                    </svg>
                                                </a>
                                            </div>
                                            <div class="px-2">
                                                <span class="js-modal-delete" style="cursor: pointer;" data-url="{{ path('app_snowboard_trick_delete', {slug: trick.slug}) }}" data-name="{{ trick.name }}">
                                                    <svg class="text-danger" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                                    </svg>
                                                </span>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                {% endfor %}
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-secondary js-spinner" type="button" disabled>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Load more
                </button>
            </div>
            <div id="scroll-up-to-tricks" class="sticky-bottom">
                <a href="#tricks" class="position-absolute bottom-0 end-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-short text-dark icon-navigation" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 12a.5.5 0 0 0 .5-.5V5.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 5.707V11.5a.5.5 0 0 0 .5.5z"/>
                </svg>
                </a>
            </div>
        </div>
    </main>
    {% include 'modal/_modal.html.twig' %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('js/homepage.js') }}" defer></script>
    <script type="module" src="{{ asset('js/modal.js') }}" defer></script>
{% endblock %}